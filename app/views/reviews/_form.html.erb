<%= form_for([@movie_theater, @review]) do |f| %>
  <%= render 'shared/flash_messages' if !flash.empty? %>

  <div class="form-group col-md-12">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Title Of Your Review" %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :rating %>
    <br>
    <%= f.label :rating, "1", value: 1, class: "radio-inline no-left-padding" %>
    <%= f.radio_button :rating, 1 %>
    <%= f.label :rating, "2", value: 2, class: "radio-inline" %>
    <%= f.radio_button :rating, 2 %>
    <%= f.label :rating, "3", value: 3, class: "radio-inline" %>
    <%= f.radio_button :rating, 3 %>
    <%= f.label :rating, "4", value: 4, class: "radio-inline" %>
    <%= f.radio_button :rating, 4 %>
    <%= f.label :rating, "5", value: 5, class: "radio-inline" %>
    <%= f.radio_button :rating, 5 %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :body %>
    <%= f.text_area :body, rows: "6", class: "form-control", placeholder: "Your Review Goes Here" %>
  </div>

  <div class="form-group col-md-12 new-edit-button-div">
    <% if action_name == "new" || action_name == "create" %>
      <%= f.submit "Add Review", class: "btn btn-primary" %>
    <% end %>
    <% if action_name == "edit" || action_name == "update" %>
      <%= f.submit "Update Review", class: "btn btn-success" %>
    <% end %>
  </div>
<% end %>
