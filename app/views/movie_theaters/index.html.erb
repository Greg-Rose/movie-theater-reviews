<h1>Movie Theaters</h1>
<br>
<% @movie_theaters.each do |theater| %>
  <div class="row">
    <div class="col-lg-6 col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading panel-form-title">
          <h3 class="panel-title"><%= link_to theater.name, movie_theater_path(theater) %></h3>
        </div>
        <div class="panel-body">
          <div class="col-lg-6 col-md-6 col-xs-6">
            <%= "#{theater.city}, #{theater.state.abbreviation}" %>
          </div>
          <div class="col-xs-4 col-md-3 col-lg-3 col-xs-offset-2 col-md-offset-3 col-lg-offset-3">
            Reviews <span class="badge">0</span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
